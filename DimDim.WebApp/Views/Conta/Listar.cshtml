@model IList<Conta>
@{
    ViewData["title"] = "Contas Bancárias";
}

@if (@TempData["msg"] != null)
{
    <div class="alert alert-success">
        <h5 class="text-center">@TempData["msg"]</h5>
    </div>      
}

<h2>Listagem de Contas</h2>
<table class="table table-striped">
    <tr>
        <th>Cliente</th>
        <th>Id conta</th>
        <th>Status</th>
        <th>Número da Conta</th>
        <th>Tipo de conta</th>
        <th>Saldo</th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.lista)
    {
        <tr>
            <td>@item.ClienteId</td>
            <td>@item.Id</td>
            <td>
                @if (@item.Status == 'A') 
                { 
                    <p>Ativa</p> 
                } else
                {
                    <p>Desativada</p>
                }
            </td>
            <td>@item.Numero</td>
            <td>@item.TipoConta</td>
            <td>R$ @item.Saldo</td>
            <td>
                <form asp-action="listar">
                    <a asp-action="editar" asp-route-id="@item.Id" class="btn btn-info btn-sm">Editar</a>
                    <input type="submit" asp-action="listar" asp-route-id="@item.Id" class="btn btn-danger btn-sm" value="Deletar" />
                </form>
            </td>

        </tr>
    }
</table>
<a asp-action="cadastrar" class="btn btn-outline-info">Cadastrar</a>